@model Web_AspDotNet_ArtikelDb.Models.AddArtikel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Insert</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <form method="post" asp-action="Insert" enctype="multipart/form-data" style="background-color:aquamarine">
        <h1>Artikel DB (neu)</h1>
        <input type="text" asp-for="@Model.Bezeichnung" /><label asp-for="@Model.Bezeichnung"></label><br />
        <input type="text" asp-for="@Model.Preis" /><label asp-for="@Model.Preis"></label><br />
        <input type="file" asp-for="@Model.Bild" /><br />
        <button>Speichern</button>
        <button type="reset">Reset</button>
    </form>
</body>
</html>
