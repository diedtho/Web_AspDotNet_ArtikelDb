@model Web_AspDotNet_ArtikelDb.Models.UpdateArtikel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Update</title>
    @*Bootstrap-Form: https://getbootstrap.com/docs/5.1/forms/form-control/*@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <div style="width:80%;margin:auto">
        <h1 class="Ueberschrift Hintergrund"><strong>Artikel DB (ändern)</strong></h1>
    </div>
    <div style="width:80%;margin:auto;background-color:cornflowerblue;padding:1em;border-radius:10px">
        <form method="post" asp-action="Update" enctype="multipart/form-data">
            <fieldset>                
                <div class="mb-3">
                    <label asp-for="@Model.AId" class="form-label" style="font-weight:bold"></label>
                    @Model.AId
                    <input type="hidden" asp-for="@Model.AId" value="@Model.AId" class="form-control" />
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Bezeichnung" class="form-label" style="font-weight:bold"></label>
                    <input type="text" asp-for="@Model.Bezeichnung" value="@Model.Bezeichnung" class="form-control" />
                    <span asp-validation-for="@Model.Bezeichnung"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Preis" class="form-label" style="font-weight:bold"></label>
                    <input type="text" asp-for="@Model.Preis" value="@Model.Preis" class="form-control" />
                    <span asp-validation-for="@Model.Preis"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Bildname" class="form-label" style="font-weight:bold"></label><br />
                    <input type="hidden" asp-for="@Model.Bildname" />
                    @Model.Bildname
                    <br /><br />
                    <img src="/Bilder/@Model.Bildname" width="555" /><br />
                    <input type="file" asp-for="@Model.Bild" class="form-control" />
                    <span asp-validation-for="@Model.Bild"></span>
                </div>
                <button>Speichern</button>
                <button type="reset">Reset</button>
                </fieldset>
            <br />
        </form>
        <a href="/home/admin">Zurück ohne Speichern</a>
    </div>
</body>
</html>