@model Web_AspDotNet_ArtikelDb.Models.ListeArtikel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <h1>Artikel DB (Admin)</h1>
    <a href="/home/Insert">Neuer Artikel</a><br />


    @if (@Model.ArtikelListe == null)
    {
        <h2>Noch keine Artikel in der Datenbank!</h2>
    }
    else
    {
        <div>
            <form asp-action="Admin" method="post">
                <input type="text" asp-for="@Model.filter" /><label asp-for="@Model.filter" />
                <br />
                <button>Filter anwenden</button>
            </form>
        </div>
        <br />
        <div>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">AId</th>
                        <th scope="col">Bezeichnung</th>
                        <th scope="col">Preis</th>
                        <th scope="col">Bild</th>
                        <th scope="col">Bearbeiten</th>
                        <th scope="col">Löschen</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var art in @Model.ArtikelListe)
                    {
                        <tr>
                            <td>@art.AId</td>
                            <td>@art.Bezeichnung</td>
                            <td>@art.Preis</td>
                            <td><img src="/Bilder/@art.Bildname" width="80" /></td>
                            <td><a href="/home/update?id=@art.AId">🖋</a></td>
                            <td><a href="/home/delete?id=@art.AId">🗑</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <a href="/home/index">Zurück zum Index</a>
    }
</body>
</html>